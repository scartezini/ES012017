    <script>
    var app = angular.module("menu", []);
    app.controller("Menu", function($scope, $http) {
        $scope.button = "Chamar garçom";
        $scope.color = "btn btn-primary" 
        $scope.called = false;
        $scope.CallWaiter = function () {
            if ($scope.called == false) {
               $http.post("/api/notification", {'type': 'call', 'message': 'Chamou o garçom'}, {headers: {'Content-Type': 'application/json'}}).then(function (response) {
                    console.log(response.data)
                    $scope.notification = response.data
                },
                function(data) {
                    $scope.error = true;
                    $scope.errorMessage = data.data.errmsg;
                    console.log(data)
                });
                $scope.button = "Cancelar garçom";
                $scope.color = "btn btn-danger" 
                $scope.called = true;
           } else {
                $http.delete('/api/notification/' + $scope.notification.id)
                .then(function (response) {
                    $scope.GetAllNotifications();
                    console.log(response.data)
                })
                $scope.button = "Chamar garçom";
                $scope.color = "btn btn-primary" 
                $scope.called = false;

           }
        }
    });
